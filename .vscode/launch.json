    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "SERVER_CONFIG": "config.py",
                "FLASK_RUN_PORT":"80"
            },
            "args": [
                "run",
                "--no-debugger",
                "--host=localhost",
                "--cert=server.crt",
                "--key=server.key",
                "--host=localhost"
                //"--no-reload"
            ],
            "jinja": true
            //"preLaunchTask":"Generate requirements"
        }
    ]
}